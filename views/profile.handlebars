<!-- HTML for navbar and sidebar borrowed from relevant elements in example at above link -->

<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
  <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Dashboard</a>
  <ul class="navbar-nav px-3">
      <li class="nav-item text-nowrap">
        <a class="nav-link active" href="/logout">Log Out</a> 
      </li>
    </ul>
</nav>
<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
          <li class="nav-item"> 
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item"> 
            <a class="nav-link active" href="/profileInfo">Profile Info</a>
          </li>
        </ul>
      </div>
    </nav>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <br>
	  <h2>Welcome, {{full_name}}</h2>
      <br>
      <ul class="list-group">
        <li class="list-group-item"><h5 style="display:inline-block;">Full Name: </h5>  {{full_name}}</li>
        <li class="list-group-item"><h5 style="display:inline-block;">Email: </h5>  {{email}}</li>
        <li class="list-group-item"><h5 style="display:inline-block;">Created: </h5>  {{createdAt}}</li>
        <li class="list-group-item"><h5 style="display:inline-block;">Updated: </h5>  {{updatedAt}}</li>
      </ul>
      <br>
      <h3>Change Name</h3>
	  <form action="/changeName" method="POST" style="display: block;">
		<input type="hidden" id="id" name="id" value="{{id}}"> </input>
	    <div class="form-group"> 
		  <input name="name" class="form-control" type="text" placeholder="Enter Your New Name" required>
        </div>
		<div class="form-group">
		  <input class="btn btn-primary form-control" type="submit" value="Change Name">
        </div>
	   </form>
       <br>
	   <h3>Change Signature (.png files < 5 KB only)</h3>
		<div class="form-group">
			<form id="frmUploader" enctype="multipart/form-data" action="/changeSignature" method="post">
				<input type="hidden" id="id" name="signature_id" value="{{signature_id}}"> </input>
				<input class="form-control" type="file" name="imgUploader" required/>
                <br>
				<input class="form-control btn-primary" type="submit" name="action" id="btnSubmit" value="Upload" /> 
			</form>	 
			{{#if error}}
			<h5>{{error}}</h5>
			{{else}}
			{{/if}}
		</div>  
    </main>
  </div>
</div>
