<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
          <li class="nav-item"> 
            <a class="nav-link" href="/adminDashboard">Admin Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/manageReg">Manage Regular Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/manageAdmin">Manage Admin Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/awardHistory">Awards History</a>
          </li>
        </ul>
      </div>
    </nav>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <br>
      <h2>Awards Given</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm"> 
          <thead> 
            <th>Recipient Name</th> 
            <th>Recipient Email</th>
            <th>Date Awarded</th>
            <th>Award Type</th> 
            <th>Given By (Name)</th>
            <th>Given By (Email)</th>
          </thead>
          <tbody> 
          {{#each awards}}
            <tr>
              <td>{{this.recipient}}
              <td>{{this.recipient_email}}
              <td>{{this.award_date}}
              <td>{{this.type_name}}  
              <td>{{this.full_name}}
              <td>{{this.sender_email}}
          {{/each}} 
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

