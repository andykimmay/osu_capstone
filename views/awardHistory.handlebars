          </li>
        </ul>
      </div>
    </nav>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <br>
      <h2>Awards Given</h2>
      <div class="table-responsive">
        <input class="form-control" id="searchInput" type="text" placeholder="Filter...">
        <br>
        <table class="table table-striped table-sm"> 
          <thead> 
            <th>Recipient Name</th> 
            <th>Recipient Email</th>
            <th>Date Awarded</th>
            <th>Award Type</th> 
            <th>Given By (Name)</th>
            <th>Given By (Email)</th>
          </thead>
          <tbody id="awardTable"> 
          {{#each awards}}
            <tr>
              <td>{{this.recipient}}
              <td>{{this.recipient_email}}
              <td>{{this.award_date}}
              <td>{{this.type_name}}  
              <td>{{this.full_name}}
              <td>{{this.sender_email}}
          {{/each}} 
          </tbody>
        </table> 
      </div>
      <!-- Credit: https://www.w3schools.com/bootstrap/bootstrap_filters.asp --> 
      <script>
        $(document).ready(function() {
          $("#searchInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#awardTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
      </script>
    </main>
  </div>
</div>


